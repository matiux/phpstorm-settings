<toolSet name="External Tools">
  <tool name="Psalm" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="make" />
      <option name="PARAMETERS" value="psalm ARG=&quot;$FilePathRelativeToProjectRoot$&quot;" />
      <option name="WORKING_DIRECTORY" value="$ContentRoot$" />
    </exec>
  </tool>
  <tool name="PHP CS Fixer Fix" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="make" />
      <option name="PARAMETERS" value="coding-standard-fix ARG=&quot;$FilePathRelativeToProjectRoot$&quot;" />
      <option name="WORKING_DIRECTORY" value="$ContentRoot$" />
    </exec>
  </tool>
</toolSet>